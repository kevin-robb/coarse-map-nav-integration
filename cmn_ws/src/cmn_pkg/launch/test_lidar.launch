<launch>
    <!-- Start the node that reads lidar data and processes it. -->
    <node pkg="cmn_pkg" type="locobot_interface.py" name="interface_node" output="screen" />

    <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" />

    <node pkg="nodelet" type="nodelet" name="nodelet1"
            args="load depth_image_proc/point_cloud_xyz nodelet_manager">
        <remap from="camera_info" to="/locobot/camera/depth/camera_info"/>
        <remap from="image_rect" to="/locobot/camera/depth/image_rect_raw"/>
        <remap from="points" to="/locobot/camera/depth/points"/>
    </node>

    <!-- <node pkg="nodelet" type="nodelet" name="nodelet1"
            args="load depth_image_proc/point_cloud_xyz nodelet_manager">
        <remap from="camera_info" to="/camera/depth/camera_info"/>
        <remap from="image_rect" to="/camera/depth/image_rect_raw"/>
        <remap from="points" to="/camera/depth/points"/>
    </node> -->
</launch>